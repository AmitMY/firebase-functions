{
  "name": "firebase-functions",
  "version": "0.5.0",
  "description": "Node helpers for Firebase Functions.",
  "main": "lib/index.js",
  "scripts": {
    "build": "node_modules/.bin/tsc",
    "build:pack": "npm prune --production && npm install typescript && node_modules/.bin/tsc && npm pack && npm install",
    "lint": "node_modules/.bin/tslint src/{**/*,*}.ts spec/{**/*,*}.ts",
    "pretest": "node_modules/.bin/tsc -p tsconfig.spec.json && cp -r spec/fixtures .tmp/spec",
    "test": "npm run lint && mocha .tmp/spec/index.spec.js",
    "posttest": "rm -rf .tmp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firebase/firebase-functions.git"
  },
  "keywords": [
    "firebase",
    "functions"
  ],
  "author": "Firebase Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/firebase/firebase-functions/issues"
  },
  "homepage": "https://github.com/firebase/firebase-functions#readme",
  "devDependencies": {
    "@types/chai": "^3.4.32",
    "@types/chai-as-promised": "0.0.28",
    "@types/mocha": "^2.2.31",
    "@types/nock": "^0.54.32",
    "@types/node": "^6.0.38",
    "@types/request": "0.0.30",
    "@types/sinon": "^1.16.29",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "firebase-admin": "^4.0.5",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "nock": "^8.0.0",
    "sinon": "^1.17.4",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  },
  "peerDependencies": {
    "firebase-admin": "^4.0.5"
  },
  "dependencies": {
    "@types/express": "^4.0.33",
    "@types/jsonwebtoken": "^7.1.32",
    "@types/lodash": "^4.14.34",
    "@types/request-promise": "^3.0.30",
    "@types/sha1": "^1.1.0",
    "express": "^4.0.33",
    "jsonwebtoken": "^7.1.9",
    "lodash": "^4.6.1",
    "request": "^2.74.0",
    "request-promise": "^4.1.1",
    "sha1": "^1.1.1"
  },
  "typings": "lib/index.d.ts"
}
